    			 <div class="flash <%= flash.has?('error') ? 'error' : 'notice' %>"><%= flash.has?('error') ? flash[:error] : flash[:notice] %></div>
    			<script>$('#flash_message').fadeIn(50).delay(4000).fadeOut(400);</script>
    			<% end %>
        </form>
      </div>
    </div>
    
